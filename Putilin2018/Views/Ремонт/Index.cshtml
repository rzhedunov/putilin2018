            @Html.DisplayFor(modelItem => item.Содержание)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Дата_выполнения)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Стоимость_ремонта)
        </td>
