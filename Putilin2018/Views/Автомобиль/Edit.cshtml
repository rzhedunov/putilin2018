                @Html.EditorFor(model => model.Название_автомобиля, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Название_автомобиля, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.Тип_ТСID, "Тип_ТСID", htmlAttributes: new { @class = "control-label col-md-2" })*@
