@model Putilin2018.Models.Voditel

@{
    ViewBag.Title = "Удалить водителя";
}

<h2>Удалить водителя</h2>

<h3>Вы уверены, что хотите удалить запись?</h3>
<div>
    <h4>Водитель</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label col-md-2">ФИО</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fio)
        </dd>

        <dt>
            <label class="control-label col-md-2">Срок действия прав</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.license_expire)
        </dd>

        <dt>
            <label class="control-label col-md-2">Категории</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.categories)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к списку", "Index")
        </div>
    }
</div>
